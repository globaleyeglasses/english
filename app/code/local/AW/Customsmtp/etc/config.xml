<?xml version="1.0"?>
<config>
    <modules>
        <AW_Customsmtp>
            <version>1.0.2</version><platform>ce</platform>
        </AW_Customsmtp>
    </modules>
    <adminhtml>
        <menu>
            <system>
                <children>
                    <mails translate="title" module="customsmtp">
                        <title>Custom SMTP</title>
                        <sort_order>40</sort_order>
                        <children>
                            <mails translate="title" module="customsmtp">
                                <title>Emails List</title>
                                <action>mails_admin/index</action>
                                <sort_order>100</sort_order>
                            </mails>
                            <settings>
                                <title>Settings</title>
                                <action>adminhtml/system_config/edit/section/customsmtp</action>
                                <sort_order>200</sort_order>
                            </settings>
                        </children>
                    </mails>
    				
                </children>
            </system>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <mails>
                            <children>
                                <mails>
                                    <title>aheadWorks - Custom SMTP Emails List</title>
                                </mails>
                            </children>
                        </mails>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <customsmtp>
                                            <title>aheadWorks - Custom SMTP Section</title>
                                        </customsmtp>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                    <children>
                        <system>
                            <children>
                                <mails translate="title" module="customsmtp">
                                    <title>Custom SMTP</title>
                                    <sort_order>40</sort_order>
                                    <children>
                                        <mails translate="title" module="customsmtp">
                                            <title>Emails List</title>
                                            <action>mails_admin/index</action>
                                            <sort_order>100</sort_order>
                                        </mails>
                                        <settings>
                                            <title>Settings</title>
                                            <action>adminhtml/system_config/edit/section/customsmtp</action>
                                            <sort_order>200</sort_order>
                                        </settings>
                                    </children>
                                </mails>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
        <translate>
            <modules>
                <AW_Customsmtp>
                    <files>
                        <default>AW_Customsmtp.csv</default>
                    </files>
                </AW_Customsmtp>
            </modules>
        </translate>
    </adminhtml>
    <admin>
        <routers>
            <customsmtp_admin>
                <use>admin</use>
                <args>
                    <module>AW_Customsmtp</module>
                    <frontName>mails_admin</frontName>
                </args>
            </customsmtp_admin>
        </routers>
    </admin>
    <global>
        <models>
            <customsmtp>
                <class>AW_Customsmtp_Model</class>
                <resourceModel>customsmtp_mysql4</resourceModel>
            </customsmtp>
            <customsmtp_mysql4>
                <class>AW_Customsmtp_Model_Mysql4</class>
                <entities>
                    <mail>
                        <table>aw_customsmtp_mail</table>
                    </mail>
                </entities>
            </customsmtp_mysql4>
            <core>
                <rewrite>
                    <email_template>AW_Customsmtp_Model_Email_Template</email_template>
                </rewrite>
            </core>
        </models>
        <resources>
            <customsmtp_setup>
                <setup>
                    <module>AW_Customsmtp</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </customsmtp_setup>
            <customsmtp_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </customsmtp_write>
            <customsmtp_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </customsmtp_read>
        </resources>
        <helpers>
            <customsmtp>
                <class>AW_Customsmtp_Helper</class>
            </customsmtp>
        </helpers>
        <blocks>
            <customsmtp>
                <class>AW_Customsmtp_Block</class>
            </customsmtp>
        </blocks>
    </global>
    <default>
        <customsmtp>
            <general>
                <enabled>0</enabled>
            </general>
            <smtp>
                <host>localhost</host>
                <port>25</port>
                <ssl>0</ssl>
                <auth>0</auth>
                <login>test</login>
                <password>pass</password>
            </smtp>
        </customsmtp>
    </default>
</config>
